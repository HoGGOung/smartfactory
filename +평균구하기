namespace score02
{
    internal class Program
    {
        static int TotalScore(int a, int b, int c)
        {
            int score = 0;
            score = a + b + c;
            return score;
        }
        static void Main(string[] args)
        { int totalScore = TotalScore(90, 90, 91);
            Console.WriteLine(totalScore);
            Console.WriteLine($"평균값: {totalScore / 3.0:F2}");
        }
    }
}
